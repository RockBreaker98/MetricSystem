@model MetricSystemModel

<form asp-controller="Conversions" asp-action="Fahrenheit" method="post" class="w-50">
  <div class="mb-3">
    <label asp-for="FahrenheitValue" class="form-label">Fahrenheit Value</label>
    <input asp-for="FahrenheitValue" type="number" step="any" class="form-control" />
  </div>

  <div class="mb-3">
    <label class="form-label">Celsius Value</label>
    <input class="form-control" value="@(ViewBag.CelsiusValue ?? "")" readonly />
  </div>

  <button type="submit" class="btn btn-primary">Convert</button>
    <a asp-action="Fahrenheit" class="btn btn-secondary">Clear</a>
</form>